{
    "name": "Python Dev Container",
    "image": "python:3.9",
    "workspaceFolder": "/workspace",
    "settings": {
      "python.pythonPath": "/usr/local/bin/python3"
    },
    "extensions": [
      "ms-python.python"
    ],
    "mounts": [
      "source=${localWorkspaceFolder},target=/workspace,type=bind"
    ]
  }